<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<SelectDialog
		id="motoristaDialog"
		title="{i18n>motorista}"
		items="{oViewModel>/listaMotorista}"
		search=".onValueHelpSearch"
		confirm=".onValueHelpClose"
		cancel=".onValueHelpClose">

		<StandardListItem
			icon="{ProductPicUrl}"
			iconDensityAware="false"
			iconInset="false"
			title="{oViewModel>name}"
			description="{oViewModel>usrid}" />
	</SelectDialog>
</core:FragmentDefinition>